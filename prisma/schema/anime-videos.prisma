model AnimeVideo {
  animeId String
  videoId String

  anime Anime @relation(fields: [animeId], references: [id])
  video Video @relation(fields: [videoId], references: [id])

  @@id([animeId, videoId])
  @@map("anime_videos")
}

model Video {
  id          String        @id @default(uuid())
  shikimoriId String?       @unique
  url         String?
  name        String?
  kind        VideoKindEnum
  playerUrl   String?
  imageUrl    String?
  animeVideo  AnimeVideo[]

  @@map("videos")
}
